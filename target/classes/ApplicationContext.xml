<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="dictionaryFileLoader" class="com.luisgal.ghost.service.DictionaryFileLoaderService">
		<property name="dictionaryFilePath" value="/word.lst" />
	</bean>

	<bean id="computerAI" class="com.luisgal.ghost.service.ai.ComputerAIService"/>

	<bean id="ghostFacade" class="com.luisgal.ghost.facade.GhostFacade">
		<constructor-arg><ref bean="dictionaryFileLoader"/></constructor-arg>
		<constructor-arg><ref bean="computerAI"/></constructor-arg>
	</bean>
</beans>